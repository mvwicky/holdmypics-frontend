    "test:open": "yarn workspace holdmytests cypress open",
    "test:run": "yarn workspace holdmytests test",
    "test:server": "yarn workspace holdmytests start"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-wherewasigoing": "^0.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-mvwicky": "^0.0.5",
    "trash-cli": "^3.1.0",
    "typescript": "^4"
  }
